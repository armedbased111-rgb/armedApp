{
    "name": "armed-app",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "electron",
        "frontend",
        "backend",
        "shared"
    ],
    "scripts": {
         "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run start:dev",
        "dev:electron": "cd electron && npm run dev"
    },
    "devDependencies": {
        "concurrently": "9.2.1"
    } 
}